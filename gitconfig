[core]
    editor = vim
    autocrlf = input
    excludesfile = ~/dotfiles/gitignore
[merge]
    tool = hvimdiff
[color]
    status = auto
    branch = auto
    diff = true
    ui = true
[diff]
    tool = hvimdiff
[difftool]
    prompt = false
[difftool "hvimdiff"]
    cmd = vimdiff -o $REMOTE $LOCAL
[log]
    date = iso
[push]
    default = simple
[pull]
    rebase = true
[rerere]
    enabled = true
[alias]
    st = status -s
    lg = log --oneline --decorate --all --graph
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    mylog = log --pretty=format:'%h %s [%an]' --graph
    grp = grep --break --heading --line-number
[grep]
    extendRegexp = true
    lineNumber = true
